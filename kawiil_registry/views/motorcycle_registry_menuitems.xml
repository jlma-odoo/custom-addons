<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="motorcycle_registry_list_action" model="ir.actions.act_window">
        <field name="name">Motorcycles</field>
        <field name="res_model">motorcycle.registry</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register a motorcycle
            </p>
        </field>
    </record>
    
    <menuitem
        id="menu_motorcycle_registry"
        name="Motorcycle Registry"
        sequence="1"
        web_icon="kawiil_registry,static/description/icon.png">
        <menuitem
            id="menu_motorcycle_registry_sub"
            name="Motorcycle Registry"
            sequence="1">
            <menuitem id="menu_motorcycle_registry_motorcycles" name="Motorcycles" sequence="2" action="motorcycle_registry_list_action"/> 
        </menuitem>
    </menuitem>

</odoo>
